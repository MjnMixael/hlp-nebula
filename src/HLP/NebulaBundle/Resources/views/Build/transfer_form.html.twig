{% form_theme form 'HLPNebulaBundle:AdvancedUI:form_theme.html.twig' %}
{% extends "HLPNebulaBundle:Build:_layout.html.twig" %}

{% block build_tab %}
    {{ form_start(form, {'attr': {'class': 'mainForm row'}}) }}
        {{ form_errors(form) }}
        {% include "HLPNebulaBundle:AdvancedUI:flashbox.html.twig" %}
        
        <h4><span class="glyphicon glyphicon-asterisk"></span> Build transfer</h4>
        <hr>

        <div class="form-group">
            {{ form_label(form.branch, "Destination branch") }}
            {{ form_errors(form.branch) }}
            {{ form_widget(form.branch) }}
        </div>
      
        <div class="form-group">
            {{ form_label(form.version, "Version*") }}
            <p class="help-block">
                A build version number must be unique <em>in this branch of your mod</em>.
                Use <a target="_blank" href='http://semver.org/'>Semantic Versioning <span class="glyphicon glyphicon-link"></span></a>.
            </p>

            {{ form_errors(form.version) }}
            {{ form_widget(form.version) }}
        </div>
      
        <div class="form-group">
            {{ form_label(form.notes, "Notes") }}
            <p class="help-block">These will be displayed on the download page and whenever a user installs this build.</p>

            {{ form_errors(form.notes) }}
            {{ form_widget(form.notes) }}
        </div>
        <br>

        <h4><span class="glyphicon glyphicon-cloud-upload"></span> Transfer this build</h4>
        <hr>
      
        {{ form_rest(form) }}
        <div class="text-center">
            <button type="submit" class="btn btn-success" style="width:100px;">Submit</button>
        </div>
    {{ form_end(form) }}
{% endblock %}