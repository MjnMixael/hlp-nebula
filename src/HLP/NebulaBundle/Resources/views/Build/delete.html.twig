{% extends "HLPNebulaBundle:Build:_layout.html.twig" %}

{% block title %}
    {{ meta.title }} / Delete mod - {{ parent() }}
{% endblock %}

{% block build_tab %}
    <form action="{{ path('hlp_nebula_repository_meta_delete', {'meta': meta.metaId, 'branch': branch.branchId, 'build': build.id}) }}" method="post" class="mainForm row">
        <h4><span class="glyphicon glyphicon-warning-sign"></span> Do you really want to delete this build?</h4>
        <hr/>
        <p class="well">
            This action will delete build <strong>"{{ meta.title }}" (id: {{ meta.metaId }}) {{ build.version }}</strong>.
        </p>
        <hr/>
        <input type="submit" value="Proceed" class="btn btn-danger" />
        {{ form_rest(form) }}
    </form>
{% endblock %}
