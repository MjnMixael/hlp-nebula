{% extends "HLPNebulaBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    Reset password
{% endblock title %}

{% block body %}
    {% for key, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="alert alert-info">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>

        {% endfor %}
    {% endfor %}

    <div class="panel panel-default">
        <div class="panel-body">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="post" class="simple-form">
                {% if invalid_username is defined %}
                    <div class="alert alert-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div>
                {% endif %}

                <div class="form-group">
                    <label for="username">{{ 'resetting.request.username'|trans }}</label>
                    <div class="field">
                        <input type="text" id="username" name="username" required="required" />
                    </div>
                </div>
    
                <div class="form-group">
                    <div class="nl-field">
                        <input type="submit" class="btn btn-primary" value="{{ 'resetting.request.submit'|trans }}" />
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock body %}
