{% extends "HLPNebulaBundle:Meta:_layout.html.twig" %}

{% block title %}
    Remove team member - {{ parent() }}
{% endblock %}

{% block meta_tab %}
    {{ form_start(form, {'attr': {'class': 'mainForm row'}}) }}
        {{ form_errors(form) }}

        <h4><span class="glyphicon glyphicon-warning-sign"></span> Do you really want to remove this team member?</h4>
        <hr>
        <p class="well">
            This action will remove {{ member }} from this mod.
        </p>
        <hr>
        <input type="submit" value="Proceed" class="btn btn-danger">
        <a href="{{ path('hlp_nebula_repository_meta_team', {'meta': meta.metaId}) }}" class="btn btn-default">Cancel</a>

        {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
